// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./database.db"
}

model Usuario {
  id String @id 
  username String @unique
  senha String @unique
  gender String @unique
  email String @unique
  cargo String @unique
  admin Boolean? @unique
  createdAt DateTime @default(now())
  posts Post[]
  comments Comments[]
}

model Cargo {
  id Int @id 
  nome String @unique
  nucleo String @unique
  createdAt DateTime @default(now())
}

model Post {
  id Int @id
  user Usuario @relation(fields: [user_id], references: [id])
  user_id String 
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  comments Comments[]

}

model Comments {
  id Int @id @default(autoincrement())
  content String 
  post Post @relation(fields: [post_id], references: [id])
  post_id Int
  user Usuario @relation(fields: [user_id], references: [id])
  user_id String 

}